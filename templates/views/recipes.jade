extends ../layouts/base

block content
    .pure-u-1
        #recipes-header Hi Fi Snockipes: Taste the flavors!!!
    #recipe-grid
        - for (var i=0; i<recipes.length; i++) {
            .pure-u-1-3
                .recipe-box
                    a(class="recipe-box-link", href="/recipes/" + recipes[i].slug)
                        .recipe-box-name
                            =recipes[i].name
                        if recipes[i].headerImage
                            .recipe-box-image-holder
                                img(class="recipe-box-image", src=recipes[i].headerImage.url)
        - }

block js
    script.
        $('#menu-list').children().removeClass('pure-menu-selected');
        $('#recipe-nav').addClass('pure-menu-selected');